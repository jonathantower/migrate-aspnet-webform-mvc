﻿@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.SystemWebAdapters
@using WingtipToys.ShopUI.Core.Logic
@* @using WingtipToys.Data *@
@* @inject SignInManager<IdentityUser> SignInManager *@
@* @inject UserManager<IdentityUser> UserManager *@
@inject WingtipToys.Data.ProductContext DbContext
@{
    //var isAdmin = User.IsInRole("Administrator");
    //var userName = User.Identity?.Name ?? "Guest";
    var year = DateTime.Now.Year;
    // // You may want to move cart count and categories to a ViewComponent or partial for real implementation

    var cartId = (Context.AsSystemWeb().Session["CartId"] ?? "").ToString();
    int cartCount = ShoppingCartActions.GetCount(cartId, DbContext);
    var categories = DbContext.Categories.ToList(); // Replace with async call in production
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Wingtip Toys</title>
    <script src="/Scripts/modernizr-2.6.2.js"></script>
    <link rel="stylesheet" href="/Content/bootstrap.css" />
    <link rel="stylesheet" href="/Content/site.css" />
    <link rel="shortcut icon" href="~/favicon.ico" type="image/x-icon" />
</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" asp-page="/Index">Wingtip Toys</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @* @if (isAdmin)
                    {
                        <li><a asp-page="/Admin/AdminPage">Admin</a></li>
                    } *@
                    <li><a href="/Index">Home</a></li>
                    <li><a href="/About">About</a></li>
                    <li><a href="/Contact">Contact</a></li>
                    <li><a href="/ProductList">Products</a></li>
                    <li><a href="/ShoppingCart">Cart (@cartCount)</a></li> 
                    @* @(Context.GetRemoteSession()) *@
                </ul>
                <ul class="nav navbar-nav navbar-right">
                   @*  @if (SignInManager.IsSignedIn(User))
                    {
                        <li>
                            <a asp-page="/Account/Manage" title="Manage your account">Hello, @userName!</a>
                        </li>
                        <li>
                            <form asp-area="" asp-page="/Account/Logout" method="post" id="logoutForm" class="navbar-right">
                                <button type="submit" class="btn btn-link navbar-btn">Log off</button>
                            </form>
                        </li>
                    }
                    else
                    {
                        <li><a asp-page="/Account/Register">Register</a></li>
                        <li><a asp-page="/Account/Login">Log in</a></li>
                    } *@
                    <li><a href="/Account/Register">Register</a></li>
                    <li><a href="/Account/Login">Log in</a></li>
                </ul>
            </div>
        </div>
    </nav>
    <div id="TitleContent" style="text-align: center">
        <a asp-page="/Index">
            <img src="~/images/logo.jpg" alt="Wingtip Toys" style="border-style:none;" />
        </a>
        <br />
    </div>
    <div id="CategoryMenu" style="text-align: center">
        @foreach (var category in categories)
        {
            <b style="font-size: large; font-style: normal">
                <a href="/Category/@category.CategoryName">@category.CategoryName</a>
            </b>
            @if (category != categories.Last())
            {
                <span> | </span>
            }
        }
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @year - Wingtip Toys</p>
            <div id="divMobile">(Modern Site)</div>
            @Context.AsSystemWeb().Session["CartId"]
        </footer>
    </div>
    @RenderSection("Scripts", required: false)
</body>
</html>